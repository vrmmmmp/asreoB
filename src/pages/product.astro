---

import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title='product'>
  <main>
    <div class="container">
        <div class="item">
            <h1>海报设计</h1>
            <div>
                <img class="image" src="/public/poster.png"/>
                <img class="image" src="/public/poster2.png"/>
                <img class="image" src="/public/poster3.png"/>
            </div>
        </div>
        <div class="item">
            <h1>logo设计</h1>
            <div>
                <img class="image" src="/public/logo1.png"/>
                <img class="image" src="/public/logo2.png"/>
            </div>
        </div>
        <div class="item">
            <h1>周边设计</h1>
            <div>
                <img class="image" src="/public/nd1.png"/>
                <img class="image" src="/public/nd2.png"/>
                <img class="image" src="/public/nd3.png"/>
                <img class="image" src="/public/nd4.png"/>
                <img class="image" src="/public/nd5.png"/>
                <img class="image" src="/public/nd6.png"/>
                <img class="image" src="/public/nd7.png"/>
            </div>
        </div>
        <div class="item">
            <h1>UI设计</h1>
            <div>
                <img class="image" src="/public/ui.png"/>
            </div>
        </div>
        <div class="item">
            <h1>各种题字</h1>
            <div>
                <img class="image" src="/public/tizi.png"/>
            </div>
        </div>
    </div>
  </main>
</Layout>

<style lang="scss" scoped>

    .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-items: center;
        margin-left: 10vw;
        margin-top: 10vh;
        gap: 10px;
        .item {
            margin: 10px;
            border-radius: 20px;
            border: 1px solid #8c8c8c ;
            background-color: #f0f0f0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 10px;
            div {
                display: flex;
            }
            .image{
                width: 10vw;
                margin: 20px;
            }
        }
    }
</style>